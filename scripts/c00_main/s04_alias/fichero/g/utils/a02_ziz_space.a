# Alias de listados de espacio ocupado
#-=================================================================-

#-Hay que intentar informar de los alias

alias lista_carpetas='find $PWD -maxdepth 1 -mindepth 1  -type d'

#-Checkspace que no utiliza funciones pero no va con espacios
alias checkspace_clean='for i in $( find $PWD -maxdepth 1 -mindepth 1  -type d  ) ; do du -h "$i" | tail -1; done'
alias testziz='for i in  $(find $PWD -maxdepth 1 -mindepth 1  -type d); do echo "$i : $(du -h $i | tail -1)"; done'

alias checklogs='find . -type f -name error_log | xargs du -h'

