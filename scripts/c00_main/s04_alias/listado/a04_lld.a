LEVEL_NIVEL=04
CONCEPT_MOLDE="alias"
CONCEPT_ARQUETIPO="listado"
CONCEPT_LEVEL="Lista de $CONCEPT_MOLDE ${CONCEPT_ARQUETIPO}"
#-==================================================================
#+ Alias definidos:
#-------------------------------------------------------------------
#-- lld - lls - llc
#-------------------------------------------------------------------

#Listado sencillo de directorios nivel 1 preparado para usarse

alias lld='find . -maxdepth 1 -mindepth 1  -type d | cut -d "/" -f2'
alias lls='lld | sort'
alias llc='lls | tr "\n" " " '

alias lll='find . -maxdepth 1 -mindepth 1  -type l | cut -d "/" -f2'

alias llf='find . -maxdepth 1 -mindepth 1  -type f | cut -d "/" -f2'

