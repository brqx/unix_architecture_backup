LEVEL_NIVEL=04
CONCEPT_MOLDE="alias"
CONCEPT_ARQUETIPO="busqueda"
CONCEPT_LEVEL="Lista de $CONCEPT_MOLDE Comunes"
#-==================================================================
#+ Alias definidos:
#-------------------------------------------------------------------
#-- fp1 .. fpn
#-------------------------------------------------------------------
#-- fpd1 .. fpdn
#-------------------------------------------------------------------
#-- fpf1 .. fpfn
#-------------------------------------------------------------------
#-- changes -- last day changes
#-==================================================================


#-Finds nivelados generales
alias fp1='find .  -mindepth 1 -maxdepth 1'
alias fp2='find .  -mindepth 2 -maxdepth 2'
alias fp3='find .  -mindepth 3 -maxdepth 3'
alias fp4='find .  -mindepth 4 -maxdepth 4'
alias fp5='find .  -mindepth 5 -maxdepth 5'

#-Finds nivelados de directorios
alias fpd1='find . -type d -mindepth 1 -maxdepth 1'
alias fpd2='find . -type d -mindepth 2 -maxdepth 2'
alias fpd3='find . -type d -mindepth 3 -maxdepth 3'
alias fpd4='find . -type d -mindepth 4 -maxdepth 4'
alias fpd5='find . -type d -mindepth 5 -maxdepth 5'

#-Finds nivelados de ficheros
alias fpf1='find . -type f -mindepth 1 -maxdepth 1'
alias fpf2='find . -type f -mindepth 2 -maxdepth 2'
alias fpf3='find . -type f -mindepth 3 -maxdepth 3'
alias fpf4='find . -type f -mindepth 4 -maxdepth 4'
alias fpf5='find . -type f -mindepth 5 -maxdepth 5'

#-lastdaychanges - last week - last month

changes=' find . -type f -mtime -1'
wchanges='find . -type f -mtime -7'
mchanges='find . -type f -mtime -30'

